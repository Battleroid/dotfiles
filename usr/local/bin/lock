#!/bin/bash
if ! pgrep "i3lock" > /dev/null
then
	scrot /tmp/lockscreen.png
	COIN=$(($(($RANDOM%10))%2))
	if [ $COIN -eq 1 ]
	then
		convert -scale 5% -scale 1366x768\! /tmp/lockscreen.png /tmp/lockscreen.png
	else
		convert -sample 5% -sample 1366x768\! /tmp/lockscreen.png /tmp/lockscreen.png
	fi

	i3lock -n -u -i /tmp/lockscreen.png
	aplay $HOME/.snds/on.wav -q &
fi
